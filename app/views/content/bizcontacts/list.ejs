<div class="container">
    <h1>Business Contacts List</h1>
   <!-- <a href="/movie-add" class="btn btn-primary" role="button">
        <i class="fas fa-plus-circle"></i> Add a Movie</a>
    <div class="row"> -->
        <div class="col">
    
            <table class="table table-striped table-bordered table-hover">
                <thead class="table-dark">
                    <tr>
                        <th scope="col" class="text-center">#</th>
                        <th scope="col">Contact Name</th>
                        <th scope="col">Contact Number</th>
                        <th scope="col">Email</th>
                        
                    </tr>
                </thead>
                <tbody id="bizContactsList">
                    <!-- Repeatable Rows -->
                    <% for(let count = 0; count < bizContacts.length; count++) { %>
                        <tr>
                            <th scope="row" class="text-center"><%= count + 1 %></th>
                            <td><%= bizContacts[count].contatName %></td>
                            <td><%= bizContacts[count].contactNumber %></td>
                            <td><%= bizContacts[count].emailAddress %></td>
                            <td class="text-center col-1">
                                <a href="/bizContacts-edit/<%= bizContacts-edit[count]._id %>"
                                    class="btn btn-primary btn-sm">
                                    <i class="fas fa-pencil-alt"></i> Edit</a>
                            </td>
                            
                            <td class="text-center col-1">
                                <a href="/bizContacts-delete/<%= bizContacts[count]._id %>"
                                    class="btn btn-danger btn-sm">
                                    <i class="fas fa-trash-alt"></i> Delete</a>
                            </td>
                        </tr>
                    <% } %>
                </tbody>
            </table>
        </div>
    </div>
</div>

